                </td>

                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.End_Date)
                </td>

                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Venu)
                </td>

                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </td>

                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Avilable)
                </td>

                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.IsActive)
                </td>

                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.IsDeleted)
                </td>

                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.CreationDate)
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.CarId">Edit</a> |
    <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>

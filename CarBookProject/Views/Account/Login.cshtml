@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Account/_LayoutLoginRegister.cshtml";
}

<link href="~/css/app.min.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/libs/toastr/build/toastr.min.css">
<meta http-equiv="X-UA-Compatible" content="ie=edge">

<!-- Font Icon -->
<link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">

<!-- Main css -->
<link rel="stylesheet" href="~/csss/style.css">
<link href="~/css/StyleSheetLogin.css" rel="stylesheet" />







<!-- Sing in  Form -->

<section class="sign-in">
    <div class="container">
        <div class="signin-content register">


            <div class="signin-form centerSin ">
                <h2 class="form-title " style="text-align:center">Sign In</h2>
                <form method="POST" class="register-form" asp-action="Login" asp-controller="Account">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label for="your_name" style="padding-left:10px "><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Email" placeholder="Your Name" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="your_pass" style="padding-left:10px "><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" value="Log in" />
                    </div>
                </form>

                <p class="w-100 text-center">— Or Register  —</p>
                <div class="social d-flex text-center">
                    <br />
                    <a asp-action="Register" asp-controller="Account" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Register</a>
                </div>
            </div>
        </div>
    </div>
</section>




